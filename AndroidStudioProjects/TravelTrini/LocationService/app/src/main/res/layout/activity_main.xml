<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_600"
    android:orientation="vertical"
    tools:context="com.javed.locationservice.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="Please swipe right to bring up navigation bar and change destination or logout"
        android:gravity="center"
        android:textSize="18dip"/>

        <TextView
            android:id="@+id/currDestLabelView"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30dip"
            android:text='Current Destination'
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/currDestView"
            android:layout_margin="20dp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:text='Destination'
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/predLabelView"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30dip"
            android:text='Prediction'
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/predView"
            android:layout_margin="20dp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:text='Prediction'
            android:textColor="@color/white" />

</LinearLayout>
